<div class="flex-cointainer w-30">
  <div class="post-container">
    <div class="post">
      <a href="<%= user_path(@post.user.id) %>">
      <%= "#{@post.user.first_name} #{@post.user.last_name}" %></a>
      <div class="post-body">
      <small><%= post_date(@post) %></small><br>
        <%= @post.body %>
      </div>
    </div>
    <div class="post-panel">
      <a href="<%= like_post_path(@post) %>"><i class="far fa-thumbs-up icon <%= post_liked?(@post) %>"> <%= @post.likes.count %></i></a>
    </div>
  </div>
    <%= form_with model: @new_comment, url: comment_post_path do |form| %>
      <%= form.text_area :body, size: '59x3', placeholder: "Comment here..."%>
      <%= form.submit "Create comment", class: "is-button bg-site font-white" %>
    <% end %>
    <%= render @comments %>
</div>
