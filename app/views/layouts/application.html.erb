<!DOCTYPE html>
<html>
  <head>
    <title>Backbook</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= favicon_link_tag asset_path('favicon.png') %>
    <!-- FONT AWESOME -->
    <script src="https://kit.fontawesome.com/61cbd0ec39.js" crossorigin="anonymous"></script>
  </head>

  <body>
    <header class="flex-container bg-site font-white">
      <%= link_to image_tag("logo/logo_white.png") , root_path %>
      <ul class="navbar">
        <% if current_user %>
        <li class="is-button"><%= link_to "Notifications", notification_path %></li>
          <li class="is-button"><%= link_to "Profile", profile_path %></li>
          <li class="is-button"><%= link_to "Logout", destroy_user_session_path, method: :delete %></li>
        <% end %>
      <ul>
    </header>
    <%= yield %>
  </body>
</html>
